<% title "Messages" %>

<%= content_tag :div, class: '' do %>

<% end %>

<%= content_tag :div, class: 'span12' do %>
	<%= content_tag :table, class: '' do %>
		<%= content_tag :thead do %>
			<%= content_tag :th, 'ID', class: 'span1 center' %>
			<%= content_tag :th, 'Sender', class: 'span2' %>
			<%= content_tag :th, 'reciever', class: 'span2' %>
			<%= content_tag :th, 'Message', class: 'span11' %>
			<%= content_tag :th, 'Order #', class: 'span2 center' %>
		<% end %>
		<%= content_tag :tbody do %>
			<% @messages.group_by(&:entry).each do |entry, messages| %>
				<tr class="label">
					<%= content_tag :td, colspan: 5 do %>
						<%= content_tag :b, "Entry ID # #{link_to(entry.id, entry)}".html_safe if entry %>
						<%= content_tag :span, entry.status, class: "label #{entry.status_color}" if entry %>
					<% end %>
				</tr>
				<% messages.each do |m| %>
					<tr>
						<%= content_tag :td, m.id, class: 'span1 center' %>
						<%= content_tag :td, class: 'span2' do %>
							<%= content_tag :p, link_to(m.user.username, m.user) %>
							<%= content_tag :em, m.user_company.nickname, class: 'small' %>
						<% end %>
						<%= content_tag :td, class: 'span2' do %>
							<%= content_tag :p, link_to(m.reciever.username, m.reciever), class: '' if m. reciever %>
							<%= content_tag :em, m.reciever_company.nickname, class: 'small' if m. reciever %>
						<% end %>
						<%= content_tag :td, class: 'span11' do %>
							<%= content_tag :p, m.message, class: '' %>
							<%= content_tag :span, (m.open_tag ? 'Public' : 'Private'), class: "label #{m.open_tag ? 'cool' : nil}" %>
							<%= content_tag :span, short_date(m.created_at), class: 'small' %>
							<%= content_tag :span, link_to('edit', edit_message_path(m)) %>
							<%= content_tag :span, link_to('delete', m, confirm: 'Are you sure you want to delete this message?', method: :delete) %>
						<% end %>
						<%= content_tag :td, class: 'span2 center' do %>
							<%= content_tag :p, link_to(m.order_id, m.order) if m.order %>
							<%= content_tag :span, m.order.status, class: "label #{m.order.status_color}" if m.order %>
						<% end %>
					</tr>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% end %>


<%= will_paginate @messages, inner_window: 2 %>
<p><%= link_to "New Message", new_message_path %></p>

<%= simple_form_for @message do |f| %>
  <%= f.error_messages %>
	<%= f.input :message, input_html: { rows: 2, class: 'span9' } %>
	<fieldset>
		<div class="row">
			<div class="span3">
				<%= f.input :user do %>
				  <%= f.grouped_collection_select :user_id,  @company_users, :users, :nickname, :id, :username, {:include_blank => true} %>
				<% end %>
				<%=  f.input :user_company do %>
				  <%= f.grouped_collection_select :user_company_id,  @company_type, :companies, :name, :id, :nickname, {:include_blank => true} %>
				<% end %>
				<%= f.input :user_type, :collection => ['admin', 'buyer', 'seller'] %>
			</div>
			<div class="span3">
				<%= f.input :receiver do %>
				  <%= f.grouped_collection_select :receiver_id,  @company_users, :users, :nickname, :id, :username, {:include_blank => true} %>
				<% end %>
				<%=  f.input :receiver_company do %>
				  <%= f.grouped_collection_select :receiver_company_id,  @company_type, :companies, :name, :id, :nickname, {:include_blank => true} %>
				<% end %>
				<%= f.input :open_tag, as: :radio, label: 'Public Message' %>
			</div>
			<div class="span3">
				<%= f.input :entry_id %>
				<%= f.input :order_id %>
			</div>
		</div>
	</fieldset>
	<div class="well">
		<%= f.button :submit, class: 'btn success' %>
	  <%= link_to "Back to List", messages_path, class: 'btn' %>
	</div>
<% end %>

$("div.msg-form").html("<%= escape_javascript(content_tag :h3, flash[:notice], class: 'highlight txtcenter') %>"); 
<% if @message.open_tag == true %>
	$("div.messages #public").replaceWith("<%= escape_javascript(render 'messages/msg_set', messages: @pub_messages, msg_type: 'Public') %>");
	// $("div.messages #public").append("<%= escape_javascript(render 'messages/msg_line', m: @message, k: nil) %>");
<% else %>
	$("div.messages #private").replaceWith("<%= escape_javascript(render 'messages/msg_set', messages: @pvt_messages, msg_type: 'Private') %>");
	// $("div.messages #private").append("<%= escape_javascript(render 'messages/msg_line', m: @message, k: nil) %>");
<% end %>
$(".spinner").hide();
<% unless @new_bids.blank? && @new_bids.all?(&:valid?) && @existing_bid.blank? %>
	<% @new_bids.group_by(&:line_item).each do |line_item, bids| %>
		<% bids.each do |bid| %>
		$("div#line_item_<%= line_item.id %> div.<%= bid.bid_type %>").html("<%= escape_javascript(content_tag :p, "#{currency(bid.amount)} #{content_tag :em, bid.user.username, class: 'small' if bid.user.present?}".html_safe) %>").effect("highlight", {}, 3000);
		<% end %>
	<% end %>
	<% @existing_bids.group_by(&:line_item).each do |line_item, bids| %>
		<% bids.each do |bid| %>
		$("div#line_item_<%= line_item.id %> div.<%= bid.bid_type %>").html("<%= escape_javascript(content_tag :p, "#{currency(bid.amount)} #{content_tag :em, bid.user.username, class: 'small' if bid.user.present?}".html_safe) %>").effect("highlight", {}, 3000);
		<% end %>
	<% end %>
<% else %>
	$("#bidding-message, h3.highlight").removeClass('green').addClass('orange').text("You may have entered a blank or invalid bid format. Please try again.").effect("highlight", {}, 3000);
<% end %>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= params[:controller] %>">
    <header>
	    <div class="container">
       <nav>
         <ul class="hmenu">
           <%= render 'shared/navigation' %>
         </ul>
       </nav>
       <% flash.each do |name, msg| %>
         <%= content_tag :div, msg, class: "alert-message #{name}" if msg.is_a?(String) %>
       <% end %>
	    </div> <!--! end of .container -->
    </header>
    <div class="container">
      <section id="main" role="main">
				<div class="row">
					<div class="span12">
						<div class="page-header">
							<%= content_tag :h1, yield(:title) + yield(:subtitle) %>
						</div>
		        <%= yield %>
					</div> <!-- end of span12 -->
					<div class="span4">
			     	<div class="well">
			        <h5>Sidebar</h5>
			      </div> <!-- end of .well -->
					</div> <!-- end of span4 -->
				</div>
      </section>
    </div> <!--! end of .container -->
      <footer>
      </footer>
		<div id="javascripts">
	    <%= javascript_include_tag "application" %>
			<%= yield(:javascripts) %>
		</div>
  </body>
</html>
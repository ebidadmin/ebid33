<% title @entry.model_name %>
<% subtitle "#{@entry.variant} (#{@entry.plate_no})" %>

<% content_for :sidebar do %>
	<%= render 'shared/info_vehicle' %>
	<%= content_tag :p, @entry.status, class: "label #{@entry.status_color} sidebar-status" %>
		<%= content_tag :dl do %>
			<%= dl_helper 'Created', long_date(@entry.created_at) %>
			<% Entry::TAGS_FOR_SIDEBAR.each do |tag| %>
				<% if tag == 'bid_until' %>
					<%= bidding_session_time_helper(@entry) if @entry.bid_until %>
				<% else %>
					<%= dl_helper tag.titleize, long_date(@entry.get_date_for_sidebar(tag)) if @entry.get_date_for_sidebar(tag) %>
				<% end %>
			<% end %>
		<% end %>
<% end %>

<%# content_for :sidebar2 do %>
	<%= content_tag :div, class: '' do %>
		<%= render 'photo_set' %>
	<% end %>
<%# end %>

<%#= content_tag :h3, 'Parts Requested' %>

<% if @entry.line_items.present? %>
	<% if current_user.role?(:admin) %>
		<%= render 'seller' %>
	<% else %>
		<%= render 'buyer' %>
	<% end %>
<% else %>
	
	<%= content_tag :div, id: 'cart', class: '' do %>
		<% if @cart.cart_items.present? %>
			<%= render 'cart/cart' %>
		<% else %>
			<%= content_tag :h2, 'Your parts list is empty.' %>
		<% end %>
	<% end %>
	<%= render 'cart/search_form' %>

<% end %>
<hr>
<%= content_tag :div, class: 'entry messages' do %>
	<%= content_tag :div, '', class: 'msg-form' %>
	<%= render 'messages/msg_set', messages: @pvt_messages, msg_type: 'Private' %>
	<%= render 'messages/msg_set', messages: @pub_messages, msg_type: 'Public' %>
<% end %>






<% title "Fees" %>

<%= content_tag :div, class: 'span12' do %>
	<%= content_tag :table, class: 'condensed-table' do %>
		<%= content_tag :thead do %>
			<%= content_tag :tr do %>
				<%= content_tag :th, 'Vehicle', class: 'span4' %>
				<%= content_tag :th, 'Parts', class: 'span4' %>
				<%= content_tag :th, 'Lowest Bid', class: 'span2 right' %>
				<%= content_tag :th, 'Factors', class: 'span1 center' %>
				<%= content_tag :th, 'Fee', class: 'span2 right' %>
				<%= content_tag :th, 'Supplier Share', class: 'span2 right' %>
			<% end %>
		<% end %>
		
		<%= content_tag :tbody do %>
			<% @fees.group_by{ |o| o.created_at.beginning_of_day }.each do |date, grouped_fees| %>
				<%= content_tag :tr do %>
					<%= content_tag :td, colspan: 6 do %>
						<%= content_tag :h5, regular_date(date) %>
					<% end %>
				<% end %>

				<% grouped_fees.group_by(&:entry).each do |entry, fees| %>

				<%= content_tag :tr do %>
					<%= content_tag :td, class: 'span4', rowspan: fees.count + 1 do %>
			      <%= content_tag :p, link_to(entry.model_name, entry)  %>
						<%= content_tag :p, entry.plate_no %>
						<%= content_tag :em, "created by #{entry.user.username}" %>
					<% end %>
				<% end %>

				<% for f in fees %>
					<%= content_tag :tr do %>
						<%= content_tag :td, f.line_item.name, class: 'span4' %>
						<%= content_tag :td, class: 'span2 right' do %>
							<%= content_tag :p, currency(f.bid_total), class: "" %>
							<%= content_tag :em, f.bid_type, class: 'small' %>
						<% end %>
						<%= content_tag :td, class: 'span1 center small' do %>
							<%= content_tag :em, time_in_words(f.bid_speed), class: 'small' if f.bid_speed %><br>
							<%= content_tag :em, 'PR: ' + f.perf_ratio.to_s, class: 'small' if f.perf_ratio %>
						<% end %>
						<%= content_tag :td, class: 'span2 right' do %>
							<%= content_tag :p, currency(f.fee), class: "" %>
							<%= content_tag :em, percentage3(f.fee_rate), class: 'small' if f.fee_rate %>
						<% end %>
						<%= content_tag :td, class: 'span2 right' do %>
							<%= content_tag :p, currency(f.split_amount), class: "" %>
							<%= content_tag :em, f.seller_company.nickname, class: 'small' if f.order_id.nil? %>
						<% end %>
					<% end %>
				<% end %>

				<% end %>

			<% end %>
		<% end %>
		
	<% end %>
<% end %>


<%= will_paginate @fees %>
<p><%= link_to "New Fee", new_fee_path %></p>

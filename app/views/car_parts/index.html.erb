<h1>Car Parts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Count</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @car_parts.each do |car_part| %>
      <tr>
        <td><%= car_part.id %></td>
        <td><%= link_to car_part.name, car_part_path(car_part) %></td>
        <td><%= car_part.line_items.count %></td>
        <td><%= car_part.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_car_part_path(car_part), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', car_part_path(car_part), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @car_parts %>

<%= link_to 'New', new_car_part_path, :class => 'btn btn-primary' %>

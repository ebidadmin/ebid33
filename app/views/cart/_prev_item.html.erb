<%= content_tag :tr, id: "item_#{item.id}" do %>
	<%= content_tag :td, class: 'span3' do %>
		<%= content_tag :span, index + 1, class: 'label index'  %>
		<%= content_tag :span, item.part_name %>
		<%= content_tag :p, "#{delete_link(item)} #{item.status}".html_safe, class: 'muted'  %>
	<% end %>
	<%= content_tag :td, (text_field_tag "items[#{item.id}][]", item.specs, class: 'span3'), class: 'span3 txtcenter highlight'  %>
<% end %>

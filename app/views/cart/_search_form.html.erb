<%= search_form_for @q, url: search_car_parts_path(:id => params[:id]), html: { class: 'form-search well' }, method: :get, remote: true do |f| %>
	<%= content_tag :h3, class: 'span4' do %>
		Search Car Parts
		<%= content_tag :small, 'Type keywords here'  %>
	<% end %>

  <%= f.text_field :name_cont, class: 'search-query span3' %>
  <%= f.submit 'Search', class: 'btn primary' %>
<% end %>

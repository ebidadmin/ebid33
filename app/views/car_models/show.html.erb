<h1>Car Model</h1>

<p>
  <b>Car brand</b><br>
  <%= @car_model.car_brand_id %>
</p>

<p>
  <b>Name</b><br>
  <%= @car_model.name %>
</p>

<p>
  <b>Creator</b><br>
  <%= @car_model.creator_id %>
</p>

<div class="form-actions">
  <%= link_to 'Back', car_models_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_car_model_path(@car_model), :class => 'btn' %>
  <%= link_to 'Delete', car_model_path(@car_model), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

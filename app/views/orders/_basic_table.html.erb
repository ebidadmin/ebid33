<%= render 'orders/thead_index_basic' %>

<%= content_tag :tbody do %>
	<% @orders.group_by{ |o| o.created_at.beginning_of_day }.each do |date, grouped_orders| %>
		<%= content_tag :tr, class: 'well' do %>
			<%= content_tag :td, colspan: 6 do %>
				<%= content_tag :h5, regular_date(date) %>
			<% end %>
		<% end %>
	
		<% grouped_orders.group_by(&:entry).each do |entry, orders| %>

		<%= content_tag :tr do %>
			<%= content_tag :td, class: 'span4', rowspan: orders.count + 1 do %>
	      <%= content_tag :p, link_to(entry.model_name, entry)  %>
				<%= content_tag :p, entry.plate_no %>
				<%= content_tag :em, "created by #{entry.user.username}", class: 'small' %>
			<% end %>
		<% end %>

		<% for order in orders %>
			<%= content_tag :tr do %>
				<%= content_tag :td, order.company.nickname, class: 'span3' %>
				<%= content_tag :td, order.seller.nickname, class: 'span3' %>
				<%= content_tag :td, link_to(order.id, order), class: 'span1 center' %>
				<%= content_tag :td, currency(order.order_total), class: 'span2 center' %>
				<%= content_tag :td, class: 'span3 center' do %>
					<%= order_status_helper(order) %>
					<%= content_tag :span, "as of #{regular_date(order.status_date, 2)}", class: 'small' %>
					<%= content_tag :span, order.messages.count, class: "label center" if order.messages.present? %>
					<%= change_status_link(order) %>
					<%= payment_tag(order) %>
				<% end %>
			<% end %>
		<% end %>
	
		<% end %>
	
	<% end %>
<% end %>

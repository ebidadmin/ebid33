<% subtitle "#{@entry.model_name} #{@entry.variant}" %>

<%= simple_form_for @order do |f|  %>
	<%= hidden_field_tag :entry_id, @entry.id %>

	<!-- create an order for each supplier -->
	<% @bids.group_by(&:user_id).each do |seller, seller_bids| %>
		<%= render 'orders/items_table', bids: seller_bids %>
	<% end %>

	<%= content_tag :div, class: 'well' do %>
		<%= content_tag :div, class: 'row' do %>

		<%= content_tag :h2, class: 'span16 clearfix' do %>
			Delivery Details
			<%= content_tag :small, "Fields marked with #{content_tag :em, 'asterisks (*)'} are required.".html_safe %>
		<% end %>

		<%= content_tag :div, class: 'span5' do %>
			<%= f.input :ref_no, label: "What's your PO Number?" %>
			<%= f.input :ref_name, label: "Who is the Insured?" %>
		<% end %>

		<%= content_tag :div, class: 'span5' do %>
			<%= content_tag :div, class: 'clearfix' do %>
				<%= f.input :deliver_to, label: 'Delivery Recipient', hint: 'Name of repair shop or receiving establishment' %>
				<%= f.label 'Address', required: true %>
				<%= content_tag :p, "Note: your original request was #{content_tag :span, @entry.city.name, class: 'label notice'} <br> Charges may apply for farther areas".html_safe, id: 'address-note' %>
			<% end %>
			<%= f.input :address1, label: 'Bldg, number, street' %>
			<%= f.input :address2, label: "Baranggay/district, city or province".html_safe, required: true %>
		<% end %>

		<%= content_tag :div, class: 'span4 offset1' do %>
			<%= f.input :contact_person, label: 'Contact Person' %>
			<%= f.input :phone %>
			<%= f.input :fax %>
			<%= f.input :instructions, label: 'Special Request or Instructions', input_html: { rows: 3 } %>
		<% end %>

		<% end %>
	<% end %>

	<%= content_tag :div, class: 'well' do %>
		<%= f.button :submit, class: 'btn success floatright' %> 
		<%= link_to "Cancel", (current_page?(accept_bids_path) ? @entry : @order), class: 'btn floatright' %>
	  <%= link_to "All Orders", orders_path, class: 'btn' %>
		<%= content_tag :p, "You have #{content_tag :span, pluralize(@bidders.count, 'supplier')}".html_safe, id: 'supplier-count' %>
		<%= content_tag :p, class: 'span10' do %>
			<%= content_tag :span, 'Important', class: 'label important' %>
			Please ensure the correctness of your order below. By creating a PO,
			<%= content_tag :b, "you agree that you are responsible for making sure that the recipient accepts the delivery." %>
		<% end %>
	<% end %>
	
<% end %>

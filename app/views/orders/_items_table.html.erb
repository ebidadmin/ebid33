	
<%#= content_tag :div, class: 'span12', id: 'order-items' do %>
	<%= content_tag :div, class: 'well' do %>

	<%= content_tag :table, class: 'table' do %>
		<%= content_tag :thead do %>
			<%=  content_tag :th %>
			<%=  content_tag :th, 'Part Description', class: 'span7' %>
			<%=  content_tag :th, 'Type', class: 'span2 center' %>
			<%=  content_tag :th, 'Qty', class: 'span2 center' %>
			<%=  content_tag :th, 'Unit Price', class: 'span2 right' %>
			<%=  content_tag :th, 'Cost', class: 'span3 right' %>
			<%=  content_tag :th, '', class: 'span1' %>
		<% end %>
			<% bids.each_with_index do |bid, index| %>
				<%= content_tag :tr, class: "#{'cancelled' if bid.cancelled?}" do %>
					<%=  content_tag :td, "#{content_tag :b, index + 1, class: 'label'}".html_safe, class: 'span1' %>
					<%=  content_tag :td, class: 'span7' do %>
						<%= bid.line_item.part_name %>
						<%= content_tag :p, bid.line_item.specs, class: 'small' if bid.line_item.specs.present? %>
					<% end %>
					<%=  content_tag :td, (content_tag :span, bid.bid_type.upcase, class: 'label'), class: 'span2 center' %>
					<%=  content_tag :td, bid_quantity_helper(bid, params[:action]), class: 'span2 center' %>
					<%=  content_tag :td, currency(bid.amount), class: 'span2 right' %>
					<%=  content_tag :td, class: 'span3 right' do %>
						<%= currency(bid.total) %>
					<% end %>
					<%= content_tag :td, check_box_helper(bid, @order, current_user, params[:action]), class: 'span1 center' %>
				<% end %>

			<% end %>

			<%= content_tag :tr, class: 'total' do %>
				<%= content_tag :th, total_label_helper(bids, params[:action]), colspan: 5, class: 'right' %>
				<%= content_tag :th, total_amount_helper(bids, params[:action]), class: 'span3 right' %>
				<%=  content_tag :th, '', class: '' %>
			<% end %>
		<% end %>

	<% end %>
<%# end %>
